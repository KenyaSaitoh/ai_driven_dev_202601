<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!--
        ============================================================================
        berry-books Log4j2 Configuration
        ============================================================================
        プロジェクトID: berry-books
        バージョン: 1.0.0
        最終更新日: 2025-12-20
        ログフレームワーク: Log4j2 2.21.x
        ============================================================================
    -->

    <Properties>
        <!-- ログファイルの出力先 -->
        <Property name="logDir">logs</Property>
        
        <!-- ログファイル名 -->
        <Property name="logFile">berry-books</Property>
        
        <!-- ログパターン: [ ClassName#methodName ] message -->
        <Property name="logPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [ %c{1}#%M ] %msg%n</Property>
        
        <!-- 詳細ログパターン（エラー用）: スタックトレース付き -->
        <Property name="detailedLogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [ %c{1}#%M ] %msg%n%throwable</Property>
    </Properties>

    <Appenders>
        <!-- ============================================================================
             コンソールアペンダー
             ============================================================================ -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${logPattern}"/>
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>

        <!-- ============================================================================
             ファイルアペンダー（全ログ）
             ============================================================================ -->
        <RollingFile name="FileAll" 
                     fileName="${logDir}/${logFile}.log"
                     filePattern="${logDir}/${logFile}-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${logPattern}"/>
            <Policies>
                <!-- 日次ローテーション -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- サイズローテーション（10MB） -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- 最大7世代保持 -->
            <DefaultRolloverStrategy max="7"/>
        </RollingFile>

        <!-- ============================================================================
             ファイルアペンダー（エラーログのみ）
             ============================================================================ -->
        <RollingFile name="FileError" 
                     fileName="${logDir}/${logFile}-error.log"
                     filePattern="${logDir}/${logFile}-error-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="${detailedLogPattern}"/>
            <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <!-- 日次ローテーション -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <!-- サイズローテーション（10MB） -->
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <!-- 最大14世代保持（エラーログは長期保存） -->
            <DefaultRolloverStrategy max="14"/>
        </RollingFile>

        <!-- ============================================================================
             非同期アペンダー（パフォーマンス最適化）
             ============================================================================ -->
        <Async name="AsyncFileAll">
            <AppenderRef ref="FileAll"/>
        </Async>
        
        <Async name="AsyncFileError">
            <AppenderRef ref="FileError"/>
        </Async>
    </Appenders>

    <Loggers>
        <!-- ============================================================================
             アプリケーションロガー（berry-booksパッケージ）
             ============================================================================ -->
        <Logger name="pro.kensait.berrybooks" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
            <AppenderRef ref="AsyncFileError"/>
        </Logger>

        <!-- ============================================================================
             JPAロガー（EclipseLink）
             ============================================================================ -->
        <Logger name="org.eclipse.persistence" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>
        
        <!-- SQL実行ログ（開発時のみDEBUG、本番環境ではINFO推奨） -->
        <Logger name="org.eclipse.persistence.logging.sql" level="FINE" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>

        <!-- ============================================================================
             JSFロガー（Jakarta Faces）
             ============================================================================ -->
        <Logger name="jakarta.faces" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>

        <!-- ============================================================================
             CDIロガー（Jakarta CDI）
             ============================================================================ -->
        <Logger name="jakarta.enterprise" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>

        <!-- ============================================================================
             Payara Serverロガー
             ============================================================================ -->
        <Logger name="fish.payara" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>

        <!-- ============================================================================
             HSQLDBロガー
             ============================================================================ -->
        <Logger name="org.hsqldb" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
        </Logger>

        <!-- ============================================================================
             ルートロガー（デフォルト）
             ============================================================================ -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AsyncFileAll"/>
            <AppenderRef ref="AsyncFileError"/>
        </Root>
    </Loggers>

</Configuration>





